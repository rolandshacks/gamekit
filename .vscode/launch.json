    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug compiler",
            "cargo": {
                "args": [
                    "build",
                    "--bin=compiler",
                    "--package=compiler"
                ],
                "filter": {
                    "name": "compiler",
                    "kind": "bin"
                }
            },
            "args": [
                "--nochecks",
                "--stdout"
            ],
            "cwd": "${workspaceFolder}/compiler"
        },
